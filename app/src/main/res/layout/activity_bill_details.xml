<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/black"
        android:background="@drawable/button"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        />

    <!-- Reference Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reference_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ref: 12345"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Completed"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-09-01 12:30 PM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Total Amount and Status (Horizontal Layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Total Amount -->
            <TextView
                android:id="@+id/total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="â‚¹ 1000"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="end"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete_item"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Status -->

        </LinearLayout>

        <!-- Delete Button -->

        <Button
            android:id="@+id/rePrintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RePrint"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />

        <TableLayout
            android:id="@+id/bill_items_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1, 2, 3"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:padding="16dp">
        </TableLayout>
    </LinearLayout>

</LinearLayout>
