<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="100dp">

    <!-- Heading -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VSP Farm - Report"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Button for Today Report -->

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button"
        android:text="Back"
        android:textColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row: Today Summary Report and Today Details Report -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/todayReportButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Today Summary Report"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:padding="12dp"
                    style="@style/BoxButton"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/todayDetailReportButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Today Details Report"
                    android:textSize="20sp"
                    android:padding="12dp"
                    style="@style/BoxButton"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Second Row: Get Summary Report and Get Detail Report -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/getSummaryReportButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Get A Summary Report"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:padding="12dp"
                    style="@style/BoxButton"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/getDetailReportButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Get A Detail Report"
                    android:textSize="20sp"
                    android:padding="12dp"
                    style="@style/BoxButton"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Third Row: Get Detail Report By Customer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/getDetailReportByCustomerButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Get A Detail Report By Customer"
                    android:layout_marginRight="20dp"
                    android:textSize="20sp"
                    android:padding="12dp"
                    style="@style/BoxButton"
                    android:textColor="@android:color/white" />

                <!-- Placeholder to balance row if you want -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>





</LinearLayout>
